<!--pages/Assistance/Persona/persona.wxml-->
<cu-custom bgImage="https://6275-buhuolinggan-9gyslra9e051f6a6-1304749657.tcb.qcloud.la/img/%25%5D87%245X%259FVI%5DDI5%7D0YA%5B%7B5.png?sign=4c1cc1a8f87aa6496f036b547eaffe31&t=1611487607" isBack="{{true}}"> 
  <view slot="backText">返回</view>
  <view style="font-weight:bold" class="text-white" slot="content">人设生成器</view>
</cu-custom>
<view class="nameboxtop">选择生成的人物时代，即可获得相应的随机生成的人名</view>
<view class="namebox">
  <view class="nameboxleft">
    <view class="nameboxleft1">
      <view class="namenumber">人物时代</view>
      <view class="data">
        <picker value="{{data[index]}}" range="{{data}}" bindchange="bindPickerChangeData" >
          <view>
          {{data[index]}}
          <text class="cuIcon-right"></text>
          </view>
        </picker>
      </view> 
    </view>
  </view>
</view>
<view class="generate" bindtap="generate">生成</view>
<view>
  <text class="cuIcon-titles lg text-gray vertical"></text>
  <view class="feature">生成结果</view>
</view>
<view style="margin-top:55rpx;">
<view style="width:100%;height:90rpx;">
  <view class="result">姓名：</view>
  <view class="end">{{name}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">性别：</view>
  <view class="end">{{gender}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">年龄：</view>
  <view class="end">{{age}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">身高：</view>
  <view class="end">{{height}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">体重：</view>
  <view class="end">{{weight}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">出身：</view>
  <view class="end">{{birth}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">家庭状况：</view>
  <view class="end">{{family}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">职业：</view>
  <view class="end">{{occupation}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">性格：</view>
  <view class="end">{{character}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">身体状况：</view>
  <view class="end">{{body}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">爱好：</view>
  <view class="end">{{hobby}}</view>
</view>
<view style="width:100%;height:90rpx;">
  <view class="result">立场：</view>
  <view class="end">{{position}}</view>
</view>
</view>
