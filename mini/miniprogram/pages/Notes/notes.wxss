/* pages/Notes/notes.wxss */
.box{
  width:27%;
  height:250rpx;
  border-radius: 10rpx;
  margin-left: 3%;
  margin-right:3%;
  margin-top:20rpx;
  background-color:#5abeb1;
  text-align:center;
  font-size:40rpx;
  padding-top:90rpx;
  color:white;
  float:left;
}
.bookbullet{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgb(0, 0, 0);
  opacity: 0.55;
  z-index: 90;
}
.bookbullet-content{
  position: absolute;
  top:20%;
  left: 16%;
  width: 500rpx;
  height: 680rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  z-index: 100;
  padding:10%;
  font-size:40rpx;
}
.bookinput{
  width:140rpx;
  height:50rpx;
  border:1rpx solid #4b504f;
  border-radius: 10rpx;
}
.introduction{
  width:100%;
  height:300rpx;
  margin-top:20rpx;
  border:1rpx solid #4b504f;
  border-radius: 10rpx;
}
.determine{
  width:110rpx;
  height:50rpx;
  border:1rpx solid #000000;
  border-radius: 8rpx;
  margin-left:68%;
  margin-top:30rpx;
  text-align: center;
}

