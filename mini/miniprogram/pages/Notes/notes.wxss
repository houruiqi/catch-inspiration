/* pages/Notes/notes.wxss */
page{
  /* background-color:rgb(255, 255, 255); */
  background-image: linear-gradient(rgb(255, 255, 255),rgb(255, 255, 255), rgb(216, 224, 247));
}
.box{
  width:23%;
  height:230rpx;
  border-radius: 10rpx;
  margin-left: 6%;
  margin-right:3%;
  margin-top:30rpx;
  background:linear-gradient(to top left,rgb(219, 206, 240),rgb(203, 181, 240));
  text-align:center;
  font-size:40rpx;
  padding-top:90rpx;
  color:white;
  float:left;
  box-shadow: 10px 10px 5px #7FA8DE; 
  border-left-style: dotted;
}
.bookbullet{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgb(0, 0, 0);
  opacity: 0.55;
  z-index: 90;
}
.bookbullet-content{
  position: absolute;
  top:20%;
  left: 11%;
  width: 580rpx;
  height: 750rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  z-index: 100;
  /* padding:10%; */
  /* padding-left: 10%; */
  font-size:30rpx;
}
.top{
  height: 90rpx;
  background-color: rgb(216, 202, 238);
}
.close{
  font-size: 40rpx;
  padding-top: 20rpx;
  margin-left: 500rpx;
}
.bookbullet-content1{
  position: absolute;
  top:20%;
  left: 16%;
  width: 500rpx;
  height: 400rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  z-index: 100;
  padding:10%;
  font-size:40rpx;
}
